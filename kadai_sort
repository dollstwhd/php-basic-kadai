    <p>
        <?php
        function sort_2way(array $nums, bool $order): array {
            if ($order) {
                sort($nums);
            } else {
                rsort($nums);
            }
            return $nums;
        }
$nums = [15, 4, 18, 23, 10 ];
echo "昇順にソートします。<br>";
sort($nums);
foreach ($nums as $value) {
    echo $value."<br>";
}
echo "降順にソートします。<br>";
rsort($nums);
foreach ($nums as $value) {
    echo $value."<br>";
}
        ?>
    </p>
